<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ProgressBar to show while data is being fetched -->
    <ProgressBar
        android:id="@+id/mechanicListProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- RecyclerView to display the list of mechanics -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mechanicRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/addMechanicButton"
        android:layout_marginBottom="16dp" /> <!-- Added bottom margin to avoid overlap with button -->

    <!-- Button to add a new mechanic -->
    <Button
        android:id="@+id/addMechanicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Mechanic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:visibility="gone" /> <!-- Set to visible if you want the add mechanic functionality -->

</RelativeLayout>
